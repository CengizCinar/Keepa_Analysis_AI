{
  "manifest_version": 3,
  "name": "Keepa Analysis AI",
  "version": "1.0",
  "description": "AI-powered Amazon product analysis using Keepa data",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*", "https://amazon.com/*"],
      "js": ["content.js"]
    }
  ]
} 